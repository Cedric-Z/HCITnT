<%- include('public/navbar');%>
<header class="masthead text-center text-white d-flex">
    <div class="container my-auto tnt-container">
        <div class="row search-three-steps-nav">
            <div class="col-lg-4">
                <div class="step-wrapper step-done" id="search_what_button">
                    <span class="step-icon step-icon-done">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    </span>
                    <span class="step-name step-name-now">What</span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="step-wrapper step-now" id="search_when_button">
                    <span class="step-icon step-icon-next">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </span>
                    <span class="step-name step-name-now">When</span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="step-wrapper step-next" id="search_where_button">
                    <span class="step-icon step-icon-next">
                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                    </span>
                    <span class="step-name step-name-now">Where</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="date-wrapper" id="date_wrapper">

            </div>
        </div>

        <div class="container" style="margin-top: 10px">
            <div class="col-md-4 col-sm-6 col-xs-12 " style="margin: auto">
                <form method="post">
                    <div class="form-group"> <!-- Date input -->
                        <input class="form-control" id="date" name="date" placeholder="MM/DD/YYY" type="text"/>
                    </div>
                    <div class="form-group"> <!-- Submit button -->
                        <a class="btn btn-primary" href="/search-where">Next</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
